#!/usr/bin/env sh

# Color definitions
GREEN='\033[0;32m'
RED='\033[0;31m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m'

echo ""
echo "${CYAN}üö¶ Running pre-commit checks${NC}"
echo ""

echo "${BLUE}‚óè Linting...${NC}"
npm run lint || {
  echo "${RED}‚úñ Linting failed${NC}"
  echo ""
  exit 1
}
echo "${GREEN}‚úî Linting passed${NC}"
echo ""

echo "${BLUE}‚óè Type checking...${NC}"
npm run type-check || {
  echo "${RED}‚úñ Type checking failed${NC}"
  echo ""
  exit 1
}
echo "${GREEN}‚úî Type checking passed${NC}"
echo ""

echo "${GREEN}üéâ All pre-commit checks passed${NC}"
echo ""
